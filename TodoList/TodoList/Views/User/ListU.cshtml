@model TodoList.ViewModel.UserViewModel

@{
    ViewData["Title"] = "ListU";
}

<h1>Users</h1>

<form asp-controller="User" asp-action="ListU" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
          
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.User)
        {
        <tr>
            <th scope="row">@u.Id</th>
            <td><a asp-controller="User" asp-action="Details" asp-route-id="@u.Id">@u.Name</a></td>
            <td><a asp-controller="User" asp-action="AddTask"><i class="fas fa-tasks"></i></a></td>

            <td><a asp-controller="User" asp-action="Delete" asp-route-id="@u.Id"><i class="far fa-trash-alt"></i></a></td>
            <td><a asp-controller="User" asp-action="Edit" asp-route-id="@u.Id"><i class="far fa-edit"></i></a></td>
        </tr>
        }



    </tbody>
</table>

<a class="btn-menu" asp-controller="User" asp-action="Create">Add User</a>

@model Rascal.ViewModel.CreateMessageViewModel


 <h4>Send Message</h4>
              
     
  <div class="row">
      <div class="col-md-4">
          <form asp-action="PostMessage">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
              <div class="form-group w-100 p-3">
                  <input type="text" class="w-100 p-3 form-control " asp-for="@Model.Content" />
                  <span asp-validation-for="@Model.Content" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <input type="submit" value="Create" class="btn btn-outline-info text-monospace" />
              </div>
          </form>
      </div>
  </div> 


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

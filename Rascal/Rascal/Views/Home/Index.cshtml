@model Rascal.ViewModel.DetailChannelViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="row">
    <div class="col-2">
       
            @foreach (var item in Model.ChannelsDb)
            {
          
                <a asp-controller="Home" asp-action="Index" asp-route-id="@item.Id"><img src="@item.IconUrl" width="80" height="80" class="rounded-circle" title="@item.Name" /></a> 
                <br />
                <a asp-controller="Home" asp-action="UpdateChannel" asp-route-id="@item.Id" class="small" >Update Chanel</a>
                <br />
                

           
            }
            <br />  
                <a asp-controller="Home" asp-action="Index" asp-route-id=""><img src="~/image/avatars-000600758694-ayo88e-t500x500.jpg" class="rounded-circle"  width="80" height="80" title="Main Channel" /></a>
        
        </div>
    <div class="col-10">
        @foreach (var item in Model.ListMessages)
        {
            <div class="card box-shadow">
                <div class="card-header text-left">
                    <img src="@item.Author.AvatarUrl" alt="Avatar" width="50" height="50" class="rounded-circle" title="@item.Author.Username" /> @item.Author.Username - @item.Created
                </div>
                <div class="card-body text-left">

                    <p>@item.Content</p>


                </div>
            </div>
            <br />
        }
        <br />

        <a asp-action="PostMessage" asp-route-Id="@Model.Id" class="btn btn-info">Send message</a>
    </div>
</div>




@model IEnumerable<Rascal.Entity.MyChannel>

@{
    ViewData["Title"] = "GetChannels";
}

<h1>Channels</h1>

<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripiton)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripiton)
            </td>
            <td>
                <a asp-controller="Home" asp-action="Index" asp-route-id="@item.Id">Go to channel</a>|
                <a asp-controller="Home" asp-action="PostMessage" asp-route-id="@item.Id">Send message to this channel</a>
            </td>
        </tr>
}
    </tbody>
</table>

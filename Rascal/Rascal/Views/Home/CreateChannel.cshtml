@model Rascal.ViewModel.CreateChannelViewModel

@{
    ViewData["Title"] = "CreateChannel";
}
  
        <h1 class="text-center">Create new channel</h1>

        <hr />
        <div class="row justify-content-lg-center">
            <div class="col-md-4">
                <form asp-action="CreateChannel">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-info text-monospace " />
                    </div>
                </form>
                <a class="small" asp-action="Index">Back to Main Channel</a>
            </div>
        </div>

       

   